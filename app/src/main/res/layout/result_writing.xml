<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="411dp"
        android:layout_height="92dp"
        android:background="#80FFFF"
        android:gravity="center"
        android:padding="8dp"
        android:text="KẾT QUẢ"
        android:textColor="#FF000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:layout_marginBottom="16dp"
        android:background="#7D52FF"
        android:gravity="center"
        android:padding="8dp"
        android:text="Bạn đã làm đúng: 1/2"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Những thẻ bạn vừa dùng để kiểm tra"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_answer_true"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#16FB11"
        android:text="Cow : Con bò"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_answer_false"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:text="Cat : Con mèo"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="40dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:backgroundTint="#7D52FF"
            android:text="Chơi lại"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="#7D52FF"
            android:text="Thoát"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>

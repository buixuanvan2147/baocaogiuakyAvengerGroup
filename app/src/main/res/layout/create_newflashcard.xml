<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:text="Tạo thẻ mới"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập từ mới"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/edittext_background">

        <EditText
            android:id="@+id/input_word"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_edit"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:background="@drawable/icon_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/id_input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập nghĩa"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/edittext_background">

        <EditText
            android:id="@+id/input_meaning"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_edit1"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/button_edit1"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:background="@drawable/icon_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phiên âm tiếng Anh"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/edittext_background">

        <EditText
            android:id="@+id/input_pronunciation"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_edit2"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/button_edit2"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:background="@drawable/icon_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/editimage_background"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_placeholder"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Chọn ảnh"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_upload" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chọn ảnh"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="hoặc"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />

    <Button
        android:id="@+id/open_camera"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:backgroundTint="#8692F7"
        android:drawableLeft="@drawable/icon_camera"
        android:gravity="center"
        android:padding="12dp"
        android:text="Mở camera"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#000000"
            android:text="Hủy"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>

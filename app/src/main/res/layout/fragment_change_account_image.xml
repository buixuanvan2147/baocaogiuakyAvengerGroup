<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    android:background="@color/white"
    tools:context=".ChangeAccountImageFragment">

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_avatar_change"
        android:background="@drawable/bkg_change_image"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="150dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_upload_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E3E4EB"
            android:gravity="center"
            android:text="Tải ảnh lên"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_take_photo_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#E3E4EB"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="Chụp ảnh"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_cancel_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E3E4EB"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_change"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-100dp"
        android:src="@drawable/muc"

        />

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/tracnghiem_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/tracnghiem_linear_bk">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Quay lại"
            android:padding="20dp"
            android:src="@drawable/arrow_back_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bài 2"
            android:textSize="40sp"
            android:layout_marginRight="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/tracnghiem_linear_bk">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="4"
            android:progress="2"
            android:progressDrawable="@drawable/tracnghiem_brogressbar"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="TIGER"
            android:textSize="70sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/tracnghiem2_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tracnghiem_options"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:text="Con hổ"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            />

        <Button
            android:id="@+id/tracnghiem2_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tracnghiem_options"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:text="Con mèo"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/tracnghiem2_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tracnghiem_options"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:text="Con heo"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/tracnghiem2_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tracnghiem_options"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:text="Con gà"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.5"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="24dp">

        <Button
            android:id="@+id/tracnghiem2_previous"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/tracnghiem_button"
            android:layout_weight="1"
            android:text="Bài trước"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/tracnghiem2_next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/tracnghiem_button"
            android:layout_weight="1"
            android:text="Bài tiếp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            app:backgroundTint="@null"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>